<%- include('../partials/html-head')  %> 
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav')  %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="title-input">Airline:</label>
    <select name="airline" id="airline-select">
      <option value="United">United</option>
      <option value="Delta">Delta</option>
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="Spirit">Spirit</option>
    </select>
    <label for="airport">Airport</label>
    <select name="airport" id="airport-select">
      <option value="AUS">AUS</option>
      <option value="DEN">DEN</option>
      <option value="SAN">SAN</option>
      <option value="LAX">LAX</option>
      <option value="DFW">DFW</option>
    </select>
    <label for="flightNo">FlightNo:</label>
    <input type="text" name="flightNo" id="flightNo">
    <label for="departs">Departs:</label>
    <input type="text" name="departs" id="departs-text">
    <input type="checkbox" name="departs" id="departs-checkbox" checked>
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include('../partials/footer')  %> 